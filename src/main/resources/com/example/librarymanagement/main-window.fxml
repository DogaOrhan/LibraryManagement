<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.librarymanagement.MainWindowController">
   <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ToolBar style="-fx-border-style: solid; -fx-background-color: #bcbcbc;" VBox.vgrow="ALWAYS">
              <items>
                <Button fx:id="addButton" alignment="CENTER" mnemonicParsing="false" onAction="#addButtonClick" prefHeight="30.0" prefWidth="75.0" style="-fx-background-color: #464646;" text="Add" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="Times New Roman Bold" size="14.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor></Button>
                  <Button alignment="CENTER" layoutX="10.0" layoutY="12.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="75.0" style="-fx-background-color: #464646;" text="Edit" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="Times New Roman Bold" size="14.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor></Button>
                  <Button fx:id="deleteBookID" alignment="CENTER" layoutX="66.0" layoutY="12.0" mnemonicParsing="false" onAction="#deleteBook" prefHeight="30.0" prefWidth="75.0" style="-fx-background-color: #464646;" text="Delete" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="Times New Roman Bold" size="14.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor></Button>
              </items>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="30.0" right="10.0" top="10.0" />
               </padding>
            </ToolBar>
            <HBox>
               <children>
                  <TextField prefHeight="35.0" promptText="Search books.." style="-fx-border-color: #bcbcbc;" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets bottom="10.0" left="50.0" right="50.0" top="10.0" />
                     </HBox.margin></TextField>
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #464646;" text="Search" textAlignment="CENTER" textFill="WHITE" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="50.0" top="10.0" />
                     </HBox.margin>
                     <font>
                        <Font name="Times New Roman Bold" size="14.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <TableView fx:id="bookTableView" style="-fx-border-style: solid;" HBox.hgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="titleCol" prefWidth="75.0" text="Title" />
                      <TableColumn fx:id="subtitleCol" prefWidth="75.0" text="Subtitle" />
                        <TableColumn fx:id="authorsCol" prefWidth="75.0" text="Authors" />
                        <TableColumn fx:id="translatorsCol" prefWidth="75.0" text="Translators" />
                        <TableColumn fx:id="isbnCol" prefWidth="75.0" text="ISBN" />
                        <TableColumn fx:id="publisherCol" prefWidth="75.0" text="Publisher" />
                        <TableColumn fx:id="dateCol" prefWidth="75.0" text="Date" />
                        <TableColumn fx:id="editionCol" prefWidth="75.0" text="Edition" />
                        <TableColumn fx:id="coverCol" prefWidth="75.0" text="Cover" />
                        <TableColumn fx:id="languageCol" prefWidth="75.0" text="Language" />
                        <TableColumn fx:id="ratingCol" prefWidth="75.0" text="Rating" />
                        <TableColumn fx:id="tagsCol" prefWidth="75.0" text="Tags" />
                        <TableColumn fx:id="numberOfPagesCol" prefWidth="75.0" text="Number of Pages" />
                        <TableColumn fx:id="coverTypeCol" prefWidth="75.0" text="Cover Type" />
                    </columns>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TableView>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="50.0" right="50.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <ToolBar style="-fx-border-style: solid; -fx-background-color: #bcbcbc;" VBox.vgrow="ALWAYS">
               <items>
                  <Button fx:id="importButtonID" alignment="CENTER" mnemonicParsing="false" onAction="#importButton" prefHeight="30.0" prefWidth="75.0" style="-fx-background-color: #464646;" text="Import" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="Times New Roman Bold" size="14.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="exportButtonID" alignment="CENTER" mnemonicParsing="false" onAction="#exportButton" prefHeight="30.0" prefWidth="75.0" style="-fx-background-color: #464646;" text="Export" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="Times New Roman Bold" size="14.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button alignment="CENTER" mnemonicParsing="false" prefHeight="30.0" prefWidth="75.0" style="-fx-background-color: #464646;" text="Help" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="Times New Roman Bold" size="14.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </items>
               <padding>
                  <Insets bottom="10.0" left="30.0" right="10.0" top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets top="170.0" />
               </VBox.margin>
            </ToolBar>
         </children>
      </VBox>
   </children>
</AnchorPane>
