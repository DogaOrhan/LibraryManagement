<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.librarymanagement.MainWindowController">
   <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ToolBar VBox.vgrow="ALWAYS">
              <items>
                <Button fx:id="addButton" mnemonicParsing="false" onAction="#addButtonClick" text="Add" />
                  <Button layoutX="10.0" layoutY="12.0" mnemonicParsing="false" text="Edit" />
                  <Button layoutX="66.0" layoutY="12.0" mnemonicParsing="false" text="Delete" />
                  <Button layoutX="122.0" layoutY="12.0" mnemonicParsing="false" text="Import" />
                  <Button layoutX="148.0" layoutY="10.0" mnemonicParsing="false" text="Export" />
                  <Button layoutX="204.0" layoutY="10.0" mnemonicParsing="false" text="Help" />
              </items>
            </ToolBar>
            <HBox VBox.vgrow="ALWAYS">
               <children>
                  <TextField HBox.hgrow="ALWAYS" />
                  <Button alignment="CENTER" mnemonicParsing="false" text="Search" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                     <font>
                        <Font name="Times New Roman Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <TableView VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn prefWidth="75.0" text="Title" />
                <TableColumn prefWidth="75.0" text="Subtitle" />
                  <TableColumn prefWidth="75.0" text="Authors" />
                  <TableColumn prefWidth="75.0" text="Translators" />
                  <TableColumn prefWidth="75.0" text="ISBN" />
                  <TableColumn prefWidth="75.0" text="Publisher" />
                  <TableColumn prefWidth="75.0" text="Date" />
                  <TableColumn prefWidth="75.0" text="Edition" />
                  <TableColumn prefWidth="75.0" text="Cover" />
                  <TableColumn prefWidth="75.0" text="Language" />
                  <TableColumn prefWidth="75.0" text="Rating" />
                  <TableColumn prefWidth="75.0" text="Tags" />
                  <TableColumn prefWidth="75.0" text="Number of Pages" />
                  <TableColumn prefWidth="75.0" text="Cover Type" />
              </columns>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
