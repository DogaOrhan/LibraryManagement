<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" alignment="TOP_CENTER" spacing="20" stylesheets="/com/example/librarymanagement/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.librarymanagement.FilterController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <ScrollPane VBox.vgrow="ALWAYS">
        <VBox fx:id="tagsContainer" spacing="10">
            <Label fx:id="noTagsLabel" text="There are no tags to display" visible="false" />
            <!-- Additional controls can be added here if needed -->
        </VBox>
    </ScrollPane>

    <HBox alignment="CENTER" spacing="5">
        <Button fx:id="applyButton" alignment="CENTER" mnemonicParsing="false" onAction="#applyFilters" prefHeight="35.0" prefWidth="100.0" text="APPLY" textAlignment="CENTER" textFill="WHITE">
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="20.0" top="10.0" />
            </HBox.margin>
            <font>
                <Font name="Times New Roman Bold" size="14.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>


    </HBox>
</VBox>
