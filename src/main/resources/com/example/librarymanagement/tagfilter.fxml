<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.text.Font?>
<VBox fx:id="root"
      alignment="TOP_CENTER"
      spacing="20"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.librarymanagement.FilterController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <ScrollPane VBox.vgrow="ALWAYS">
        <VBox fx:id="tagsContainer" spacing="10">
            <Label fx:id="noTagsLabel" text="There are no tags to display" visible="false"/>
            <!-- Additional controls can be added here if needed -->
        </VBox>
    </ScrollPane>

    <HBox spacing="5" alignment="CENTER">
        <Button fx:id="applyButton" alignment="CENTER" mnemonicParsing="false" onAction="#applyFilters" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #464646;" text="APPLY" textAlignment="CENTER" textFill="WHITE">
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="20.0" top="10.0" />
            </HBox.margin>
            <font>
                <Font name="Times New Roman Bold" size="14.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>


    </HBox>
</VBox>